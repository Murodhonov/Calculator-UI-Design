<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:background="@color/black"
        android:columnCount="6"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="C"
            android:fontFamily="@font/g_light"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            tools:targetApi="lollipop"
            android:onClick="btnClear"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/btnBracket"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="()"
            android:onClick="btnBracket"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/btnPercent"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="%"
            android:onClick="btnPercent"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/btnDivison"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="/"
            android:onClick="btnDivision"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>


        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="7"
            android:onClick="btn7"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="8"
            android:onClick="btn8"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="9"
            android:onClick="btn9"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="x"
            android:onClick="btnMultiply"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="4"
            android:onClick="btn4"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop" />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="5"
            android:onClick="btn5"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="6"
            android:onClick="btn6"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="-"
            android:onClick="btnMinus"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            android:onClick="btn1"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:gravity="center"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            android:onClick="btn2"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="3"
            android:onClick="btn3"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            android:onClick="btnPlus"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:onClick="btn0"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="."
            android:gravity="center"
            android:textSize="25sp"
            android:layout_columnSpan="2"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="="
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/orange"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:fontFamily="@font/g_light"
            tools:targetApi="lollipop"/>

    </GridLayout>

</RelativeLayout>